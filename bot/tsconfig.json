{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "outDir": "./build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "baseUrl": "./",
    "paths": {
      "~/*": ["./src/*"],
      "@packagejson": ["./package.json"]
    },
    "typeRoots": ["./@types"],
    "sourceMap": true
  },
  "ts-node": {
    "files": true,
    "require": ["tsconfig-paths/register"]
  }
}
